        xmlns:local="clr-namespace:TagDocx"
        mc:Ignorable="d"
        Title="ToastMessage" Height="80" Width="400" Background="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center" AllowsTransparency="True" WindowStyle="None"
